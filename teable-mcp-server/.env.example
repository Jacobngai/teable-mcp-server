# ===========================================
# Result Marketing AI Connector - MCP Server
# Environment Variables
# ===========================================

# PostgreSQL Database (REQUIRED)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:your-password@your-host:5432/your-database

# Set to 'false' if your PostgreSQL doesn't use SSL (local development)
DATABASE_SSL=true

# MCP Server Transport (default: http for Railway, stdio for local)
MCP_TRANSPORT=http

# Server Port (Railway sets this automatically)
PORT=3000

# ============ ENCRYPTION ============
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# ============ STRIPE PAYMENT ============
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_BASE=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# ============ EMAIL (RESEND) ============
RESEND_API_KEY=re_...

# ============ ADMIN DASHBOARD ============
# Password for admin login
ADMIN_PASSWORD=your-secure-admin-password

# ============ FRONTEND URL ============
FRONTEND_URL=https://www.resultmarketing.asia

# ============ TEABLE API (Optional - for local testing only) ============
# TEABLE_API_KEY=teable_pat_...
